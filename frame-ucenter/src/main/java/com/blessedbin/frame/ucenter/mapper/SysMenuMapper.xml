    <select id="selectMenusByUuidAndEnabled" resultType="com.blessedbin.frame.ucenter.modal.SysMenu">
      select *
      from sys_menu
        inner join sys_permission permission on sys_menu.permission_id = permission.id
        inner join sys_role_has_permission srhp on permission.id = srhp.sys_permission_id
        inner join sys_role sr on srhp.sys_role_id = sr.id
        inner join sys_user_has_role suhr on sr.id = suhr.sys_role_id
      where suhr.sys_user_uuid = #{uuid} and sys_menu.enabled=b'1' and sys_menu.type=0
    </select>
    <select id="selectMenusByPid" resultType="com.blessedbin.frame.ucenter.modal.SysMenu">
      select * from sys_menu where pid=#{pid} and type=0
    </select>
    <select id="selectAllMenus" resultType="com.blessedbin.frame.ucenter.modal.SysMenu">
      select * from sys_menu where type=0
    </select>
    <select id="selectCountByNameAndPid" resultType="java.lang.Integer">
      select count(*) from sys_menu where name=#{name} and pid=#{pid}
    </select>
  <select id="selectByPidAndType" resultType="com.blessedbin.frame.ucenter.modal.SysMenu">
    select * from sys_menu where pid=#{menuId} and type=#{type}
  </select>
</mapper>