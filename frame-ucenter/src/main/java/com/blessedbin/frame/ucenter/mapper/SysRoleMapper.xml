<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blessedbin.frame.ucenter.mapper.SysRoleMapper">
    <resultMap id="BaseResultMap" type="com.blessedbin.frame.ucenter.modal.SysRole">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        <result column="role_key" property="roleKey" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="sort" property="sort" jdbcType="INTEGER"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
    </resultMap>
    <select id="selectRolesByUUid" resultType="com.blessedbin.frame.ucenter.modal.SysRole">
        select *
        from sys_role
            inner join sys_user_role suhr on sys_role.id = suhr.sys_role_id
        where suhr.sys_user_uuid = #{uuid}
    </select>
    <select id="selectByRoleKey" resultType="com.blessedbin.frame.ucenter.modal.SysRole">
        select *
        from sys_role
        where role_key = #{key}
    </select>
    <select id="selectAllByUuidAndEnabled" resultMap="BaseResultMap">
        select *
        from sys_role
            inner join sys_user_role suhr on sys_role.id = suhr.sys_role_id
        where suhr.sys_user_uuid = #{uuid} and enabled=b'1'
    </select>
</mapper>